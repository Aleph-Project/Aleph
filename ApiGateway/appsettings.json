{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Apigateway": {
    "Routes": {
      "Reviews":{
        "ClusterId": "Reviews",
        "Match": {
          "Path": "/api/v1/reviews/{**catchall}",
          "Methods": [ "GET", "POST", "PUT", "DELETE", "PATCH" ]
        }
      },
      "Profiles":{
        "ClusterId": "Profiles",
        "Match": {
          "Path": "/api/v1/profiles/{**catchall}",
          "Methods": [ "GET", "POST", "PUT", "DELETE", "PATCH" ]
        }
      },
      "Music":{
        "ClusterId": "Music",
        "Match": {
          "Path": "/api/v1/music/{**catchall}",
          "Methods": [ "GET", "POST", "PUT", "DELETE" ]
        }
      },
      "Auth":{
        "ClusterId": "Auth",
        "Match": {
          "Path": "/api/v1/auth/{**catchall}",
          "Methods": [ "GET", "POST", "PUT", "DELETE" ]
        }
      }
    },
    "Clusters": {
      "Reviews": {
        "Destinations": {
          "ReviewsService": {
            "Address": "http://reviews-ms:3000/"
          }
        }
      },
      "Profiles": {
        "Destinations": {
          "ProfilesService": {
            "Address": "http://profile-ms:3000/"
          }
        }
      },
      "Music": {
        "Destinations": {
          "MusicService": {
            "Address": "http://music-ms:3002/"
          }
        }
      },
      "Auth": {
        "Destinations": {
          "AuthService": {
            "Address": "http://Auth-ms:4000/"
          }
        }
      }
    }
    
  },
   "Services": {
    "Profiles": "http://profile-ms:3000",
    "Reviews": "http://reviews-ms:3000",
    "Auth": "http://Auth-ms:4000"
  },
  "AllowedHosts": "*"

}
